

"version": 2,
"builds": [
  {
    "src": "f/src",
    "dest": ".",
    "command": "npm run build" // O cualquier comando que uses para construir tu app Svelte
  },
  {
    "src": "b/app.py",
    "dest": ".",
    "use": "@vercel/python"
  }
],
"routes": [
    {"src": "/(.*)", "dest": "app.py"}
]


{
  "version": 2,
  "builds": [
    {
      "src": "frontend/public",
      "dest": ".",
      "command": "npm run build" // O cualquier comando que uses para construir tu app Svelte
    },
    {
      "src": "backend",
      "dest": ".",
      "command": "flask run --host 0.0.0.0" // Comando para ejecutar tu app Flask
    }
  ],
  "routes":
  [
    {
      "src": "/(.*)",
      "dest": "/f/dist"
    },
    {
      "src": "/api/(.*)",
      "dest": "/b/app.py"
    }
  ]
}