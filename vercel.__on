{
  "version": 2,
  "builds": [
    {
      "src": "f/src",  // Replace with your Svelte source directory
      "dest": "f/dist", // Replace with your Svelte build output directory
      "command": "npm run build" // Adjust if you use a different Svelte build command
    },
    {
      "src": "b/app.py",
      "use": "@vercel/python",
      "env": {  // Set environment variables here (optional)
        "FLASK_ENV": "production" // Example for Flask configuration
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",  // Matches all non-API routes
      "dest": "/f/dist/index.html" // Serve Svelte app's entry point
    },
    {
      "src": "/api/(.*)",  // Matches all API routes
      "dest": "/b/app.py"   // Proxy API requests to Flask app
    }
  ]
}